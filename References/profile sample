class _ProfileScreenState extends State<ProfileScreen> {
  final _authService = AuthService();
  final _apiService = ApiService();
  List<dynamic> _products = [];
  bool _isLoading = true;
  int _selectedAvatarIndex = 0;
  String _username = '';

  // Avatar image paths
